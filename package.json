{
  "name": "beca-vscode",
  "displayName": "BECA - AI Coding Assistant",
  "description": "Badass Expert Coding Agent integration for VS Code",
  "version": "1.0.0",
  "publisher": "beca",
  "repository": {
    "type": "git",
    "url": "https://github.com/BobbyW08/BECA-clone.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "ai",
    "coding assistant",
    "code generation",
    "ollama",
    "langchain"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "beca.askBeca",
        "title": "BECA: Ask BECA",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "beca.analyzeCode",
        "title": "BECA: Analyze This Code",
        "icon": "$(search)"
      },
      {
        "command": "beca.reviewFile",
        "title": "BECA: Review Current File",
        "icon": "$(checklist)"
      },
      {
        "command": "beca.explainCode",
        "title": "BECA: Explain This Code"
      },
      {
        "command": "beca.fixError",
        "title": "BECA: Fix This Error"
      },
      {
        "command": "beca.generateTests",
        "title": "BECA: Generate Tests"
      },
      {
        "command": "beca.refactor",
        "title": "BECA: Suggest Refactoring"
      },
      {
        "command": "beca.addComments",
        "title": "BECA: Add Comments"
      },
      {
        "command": "beca.showHistory",
        "title": "BECA: Show Conversation History"
      },
      {
        "command": "beca.toggleAutoReview",
        "title": "BECA: Toggle Auto-Review on Save"
      },
      {
        "command": "beca.showStatus",
        "title": "BECA: Show Status"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "beca.analyzeCode",
          "when": "editorHasSelection",
          "group": "beca@1"
        },
        {
          "command": "beca.explainCode",
          "when": "editorHasSelection",
          "group": "beca@2"
        },
        {
          "command": "beca.refactor",
          "when": "editorHasSelection",
          "group": "beca@3"
        },
        {
          "command": "beca.fixError",
          "when": "editorTextFocus",
          "group": "beca@4"
        }
      ],
      "editor/title": [
        {
          "command": "beca.reviewFile",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "beca.askBeca",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b"
      },
      {
        "command": "beca.analyzeCode",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorHasSelection"
      }
    ],
    "configuration": {
      "title": "BECA",
      "properties": {
          "beca.apiUrl": {
            "type": "string",
            "default": "http://127.0.0.1:7862",
            "description": "URL of the BECA backend API (running on Google Cloud Compute Engine)"
          },
        "beca.autoReview": {
          "type": "boolean",
          "default": false,
          "description": "Automatically review files on save"
        },
        "beca.showInlineHints": {
          "type": "boolean",
          "default": true,
          "description": "Show inline code hints and suggestions"
        },
        "beca.enableHoverTooltips": {
          "type": "boolean",
          "default": true,
          "description": "Show BECA insights on hover"
        },
        "beca.debugAssistant": {
          "type": "boolean",
          "default": true,
          "description": "Enable debug assistant for error analysis"
        },
        "beca.terminalIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable terminal integration for BECA commands"
        },
        "beca.suggestionDelay": {
          "type": "number",
          "default": 2000,
          "description": "Delay (ms) before showing suggestions"
        },
        "beca.maxSuggestions": {
          "type": "number",
          "default": 3,
          "description": "Maximum number of suggestions to show"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "beca-sidebar",
          "title": "BECA",
          "icon": "$(comment-discussion)"
        }
      ],
      "panel": [
        {
          "id": "beca-panel",
          "title": "BECA",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "beca-sidebar": [
        {
          "id": "beca.chatView",
          "name": "Chat with BECA",
          "type": "webview"
        },
        {
          "id": "beca.historyView",
          "name": "Conversation History",
          "type": "webview"
        },
        {
          "id": "beca.insightsView",
          "name": "Code Insights",
          "type": "webview"
        }
      ],
      "beca-panel": [
        {
          "id": "beca.chatViewPanel",
          "name": "Chat with BECA",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.x",
    "eslint": "^8.x"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0"
  }
}
